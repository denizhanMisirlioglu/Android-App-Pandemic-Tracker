<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".globalActivity"
    android:background="@color/black"
    >

    <ImageButton
        android:id="@+id/advice"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:background="@drawable/advice"
        android:contentDescription="@string/swipeleft_tip">

    </ImageButton>

    <ImageButton
        android:id="@+id/buttonWorld"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:scaleType="centerInside"
        android:src="@drawable/world">


    </ImageButton>

    <RelativeLayout
        android:layout_below="@+id/buttonWorld"
        android:id="@+id/layoutContinents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black">

        <ImageButton
            android:id="@+id/buttonAfrica"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/buttonEurope"

            android:layout_centerInParent="true"
            android:background="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/africa">


        </ImageButton>

        <ImageButton
            android:id="@+id/buttonAustralia"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/buttonAsia"

            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="9dp"
            android:background="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/australia"

            >


        </ImageButton>

        <ImageButton
            android:id="@+id/buttonAsia"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentRight="true"
            android:background="@color/black"

            android:scaleType="centerInside"
            android:src="@drawable/asia">


        </ImageButton>

        <ImageButton
            android:id="@+id/buttonEurope"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"


            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/europe">


        </ImageButton>

        <ImageButton
            android:id="@+id/buttonNorth"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"

            android:background="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/north">


        </ImageButton>

        <ImageButton
            android:id="@+id/buttonSouth"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_below="@+id/buttonNorth"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="41dp"


            android:background="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/south">


        </ImageButton>

    </RelativeLayout>


</RelativeLayout>